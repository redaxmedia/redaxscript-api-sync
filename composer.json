{
	"name": "redaxscript/redaxscript-api-sync",
	"description": "Yet another cronjob for Redaxscript's website",
	"version": "3.3.1",
	"homepage": "https://redaxscript.com",
	"license": "GPL-3.0",
	"require":
	{
		"php": "^7.1"
	},
	"require-dev":
	{
		"phpdocumentor/phpdocumentor": "2.9.0",
		"redaxmedia/php-coding-standard": "1.0.0",
		"redaxscript/redaxscript": "dev-master",
		"squizlabs/php_codesniffer": "3.2.3"
	},
	"scripts":
	{
		"post-install-cmd":
		[
			"cd vendor/redaxscript/redaxscript && composer install"
		],
		"post-update-cmd":
		[
			"@post-install-cmd"
		],
		"lint":
		[
			"vendor/bin/phpcs includes"
		],
		"build":
		[
			"vendor/bin/phpdoc --no-ansi"
		]
	}
}
