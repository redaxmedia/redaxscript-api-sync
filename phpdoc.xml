<?xml version="1.0"?>
<phpdoc>
	<title>Redaxscript</title>

	<!-- parser -->

	<parser>
		<target>build</target>
	</parser>

	<!-- transformer -->

	<transformer>
		<target>build</target>
		<external-class-documentation>
			<uri>api/{LOWERCASE_CLASS}</uri>
		</external-class-documentation>
	</transformer>

	<!-- files -->

	<files>
		<directory>vendor/redaxmedia/redaxscript/includes</directory>
		<ignore>includes/bootstrap.php</ignore>

		<!-- deprecated -->

		<ignore>includes/admin_admin.php</ignore>
		<ignore>includes/admin_list.php</ignore>
		<ignore>includes/admin_query.php</ignore>
		<ignore>includes/admin_router.php</ignore>
		<ignore>includes/comments.php</ignore>
		<ignore>includes/contents.php</ignore>
		<ignore>includes/navigation.php</ignore>
		<ignore>includes/query.php</ignore>
		<ignore>includes/router.php</ignore>
		<ignore>includes/startup.php</ignore>
	</files>

	<!-- transformations -->

	<transformations>
		<template name="xml" />
	</transformations>
</phpdoc>